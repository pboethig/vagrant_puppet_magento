<widgets>
    <cmsextended_cmspage_view type="ibrams_cmsextended/cmspage_widget_view" translate="name description" module="ibrams_cmsextended">
        <name>Cmspage view</name>
        <description>Cmspage view widget</description>
        <is_email_compatible>0</is_email_compatible>
        <parameters>
            <cmspage_id type="complex" translate="label">
                <visible>1</visible>
                <required>1</required>
                <label>Cmspage</label>
                <type>label</type>
                <helper_block>
                    <type>ibrams_cmsextended/adminhtml_cmspage_widget_chooser</type>
                    <data>
                        <button translate="open">
                            <open>Select Cmspage</open>
                        </button>
                    </data>
                </helper_block>
                <sort_order>120</sort_order>
            </cmspage_id>
        </parameters>
    </cmsextended_cmspage_view>
    <cmsextended_cmspage_link type="ibrams_cmsextended/cmspage_widget_link" translate="name description" module="ibrams_cmsextended">
        <name>Cmspage link</name>
        <description>Cmspage link widget</description>
        <is_email_compatible>0</is_email_compatible>
        <parameters>
            <cmspage_id type="complex" translate="label">
                <visible>1</visible>
                <required>1</required>
                <label>Cmspage</label>
                <type>label</type>
                <helper_block>
                    <type>ibrams_cmsextended/adminhtml_cmspage_widget_chooser</type>
                    <data>
                        <button translate="open">
                            <open>Select Cmspage</open>
                        </button>
                    </data>
                </helper_block>
                <sort_order>130</sort_order>
            </cmspage_id>
        </parameters>
    </cmsextended_cmspage_link>
    <cmsextended_cmspage_subtree type="ibrams_cmsextended/cmspage_widget_subtree" translate="name description" module="ibrams_cmsextended">
        <name>Cmspage subtree</name>
        <description>Cmspage subtree widget</description>
        <is_email_compatible>0</is_email_compatible>
        <parameters>
            <cmspage_id type="complex" translate="label">
                <visible>1</visible>
                <required>1</required>
                <label>Cmspage</label>
                <type>label</type>
                <helper_block>
                    <type>ibrams_cmsextended/adminhtml_cmspage_widget_chooser</type>
                    <data>
                        <button translate="open">
                            <open>Select Cmspage</open>
                        </button>
                    </data>
                </helper_block>
                <sort_order>10</sort_order>
            </cmspage_id>
            <recursion type="complex" translate="label">
                <visible>1</visible>
                <required>1</required>
                <value>0</value>
                <label>Levels to show (0 for all)</label>
                <type>text</type>
                <sort_order>20</sort_order>
            </recursion>
        </parameters>
    </cmsextended_cmspage_subtree>
</widgets>
