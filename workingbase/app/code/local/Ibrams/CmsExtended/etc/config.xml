<config>
    <modules>
        <Ibrams_CmsExtended>
            <version>1.0.0</version>
        </Ibrams_CmsExtended>
    </modules>
    <global>
        <resources>
            <ibrams_cmsextended_setup>
                <setup>
                    <module>Ibrams_CmsExtended</module>
                    <class>Ibrams_CmsExtended_Model_Resource_Setup</class>
                </setup>
            </ibrams_cmsextended_setup>
        </resources>
        <blocks>
            <ibrams_cmsextended>
                <class>Ibrams_CmsExtended_Block</class>
            </ibrams_cmsextended>
        </blocks>
        <helpers>
            <ibrams_cmsextended>
                <class>Ibrams_CmsExtended_Helper</class>
            </ibrams_cmsextended>
        </helpers>
        <models>
            <ibrams_cmsextended>
                <class>Ibrams_CmsExtended_Model</class>
                <resourceModel>ibrams_cmsextended_resource</resourceModel>
            </ibrams_cmsextended>
            <ibrams_cmsextended_resource>
                <class>Ibrams_CmsExtended_Model_Resource</class>
                <entities>
                    <cmspage>
                        <table>ibrams_cmsextended_cmspage</table>
                    </cmspage>
                    <cmspage_store>
                        <table>ibrams_cmsextended_cmspage_store</table>
                    </cmspage_store>
                    <cmspage_product>
                        <table>ibrams_cmsextended_cmspage_product</table>
                    </cmspage_product>
                    <cmspage_category>
                        <table>ibrams_cmsextended_cmspage_category</table>
                    </cmspage_category>
                    <cmspage_comment>
                        <table>ibrams_cmsextended_cmspage_comment</table>
                    </cmspage_comment>
                    <cmspage_comment_store>
                        <table>ibrams_cmsextended_cmspage_comment_store</table>
                    </cmspage_comment_store>
                </entities>
            </ibrams_cmsextended_resource>
        </models>
        <events>
            <controller_front_init_routers>
                <observers>
                    <ibrams_cmsextended>
                        <class>Ibrams_CmsExtended_Controller_Router</class>
                        <method>initControllerRouters</method>
                    </ibrams_cmsextended>
                </observers>
            </controller_front_init_routers>
        </events>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <ibrams_cmsextended>
                    <file>ibrams_cmsextended.xml</file>
                </ibrams_cmsextended>
            </updates>
        </layout>
        <translate>
            <modules>
                <Ibrams_CmsExtended>
                    <files>
                        <default>Ibrams_CmsExtended.csv</default>
                    </files>
                </Ibrams_CmsExtended>
            </modules>
        </translate>
        <events>
            <core_block_abstract_prepare_layout_after>
                <observers>
                    <ibrams_cmsextended_cmspage_product>
                        <type>singleton</type>
                        <class>ibrams_cmsextended/adminhtml_observer</class>
                        <method>addProductCmspageBlock</method>
                    </ibrams_cmsextended_cmspage_product>
                </observers>
            </core_block_abstract_prepare_layout_after>
            <adminhtml_catalog_category_tabs>
                <observers>
                    <ibrams_cmsextended_cmspage_category>
                        <type>singleton</type>
                        <class>ibrams_cmsextended/adminhtml_observer</class>
                        <method>addCategoryCmspageBlock</method>
                    </ibrams_cmsextended_cmspage_category>
                </observers>
            </adminhtml_catalog_category_tabs>
            <catalog_product_save_after>
                <observers>
                    <ibrams_cmsextended_cmspage_product>
                        <type>singleton</type>
                        <class>ibrams_cmsextended/adminhtml_observer</class>
                        <method>saveProductCmspageData</method>
                    </ibrams_cmsextended_cmspage_product>
                </observers>
            </catalog_product_save_after>
            <catalog_category_save_after>
                <observers>
                    <ibrams_cmsextended_cmspage_category>
                        <type>singleton</type>
                        <class>ibrams_cmsextended/adminhtml_observer</class>
                        <method>saveCategoryCmspageData</method>
                    </ibrams_cmsextended_cmspage_category>
                </observers>
            </catalog_category_save_after>
        </events>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Ibrams_CmsExtended before="Mage_Adminhtml">Ibrams_CmsExtended_Adminhtml</Ibrams_CmsExtended>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <frontend>
        <routers>
            <ibrams_cmsextended>
                <use>standard</use>
                <args>
                    <module>Ibrams_CmsExtended</module>
                    <frontName>ibrams_cmsextended</frontName>
                </args>
            </ibrams_cmsextended>
        </routers>
        <layout>
            <updates>
                <ibrams_cmsextended>
                    <file>ibrams_cmsextended.xml</file>
                </ibrams_cmsextended>
            </updates>
        </layout>
        <translate>
            <modules>
                <Ibrams_CmsExtended>
                    <files>
                        <default>Ibrams_CmsExtended.csv</default>
                    </files>
                </Ibrams_CmsExtended>
            </modules>
        </translate>
    </frontend>
    <default>
        <ibrams_cmsextended>
            <cmspage>
                <breadcrumbs>1</breadcrumbs>
                <allow_comment>1</allow_comment>
                <rss>1</rss>
                <meta_title>cmspages</meta_title>
                <tree>1</tree>
                <recursion>0</recursion>
            </cmspage>
        </ibrams_cmsextended>
    </default>
</config>
